<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"  >

    <solid android:color="#000000" /> // 리스트 안 배경색

    <stroke
        android:width="1dp"
        android:color="#000000" > //테두리 색깔
    </stroke>

    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" >
    </padding>

    <corners
        android:radius="0dp" > //상자 네모난 정도
    </corners>

</shape>
